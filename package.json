{
	"name": "tweakpane-css",
	"version": "2.3.1",
	"description": "Detect and tweak CSS variables at runtime.",
	"keywords": [
		"tweakpane",
		"svelte",
		"css",
		"developer-tools",
		"npm-package"
	],
	"homepage": "https://github.com/kitschpatrol/tweakpane-css",
	"bugs": "https://github.com/kitschpatrol/tweakpane-css/issues",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/kitschpatrol/tweakpane-css.git"
	},
	"license": "MIT",
	"author": {
		"name": "Eric Mika",
		"email": "eric@ericmika.com",
		"url": "https://ericmika.com/"
	},
	"type": "module",
	"main": "dist/main.js",
	"files": [
		"dist/*"
	],
	"scripts": {
		"build": "vite build",
		"check": "svelte-check --tsconfig ./tsconfig.build.json",
		"clean": "rm pnpm-lock.yaml ; git clean -fdX",
		"dev": "npm-run-all --parallel dev:*",
		"dev:build": "vite build --watch",
		"dev:serve": "vite",
		"fix": "kpi fix",
		"lint": "kpi lint && pnpm run check",
		"preview": "vite preview",
		"release": "bumpp --commit 'Release: %s' && pnpm run build && NPM_AUTH_TOKEN=$(op read 'op://Personal/npm/token') && pnpm publish"
	},
	"devDependencies": {
		"@kitschpatrol/shared-config": "^5.9.2",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tsconfig/svelte": "^5.0.6",
		"@types/qs": "^6.14.0",
		"bumpp": "^10.3.2",
		"color-parse": "^2.0.2",
		"element-ready": "^9.0.0",
		"npm-run-all": "^4.1.5",
		"qs": "^6.14.0",
		"svelte": "^5.45.3",
		"svelte-check": "^4.3.4",
		"svelte-persisted-store": "^0.12.0",
		"svelte-tweakpane-ui": "1.6.0-preview.4",
		"typescript": "~5.9.3",
		"vite": "^7.2.6",
		"vite-plugin-live-reload": "^3.0.5"
	},
	"packageManager": "pnpm@10.24.0",
	"engines": {
		"node": ">=20.9.0"
	}
}
