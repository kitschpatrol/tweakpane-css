{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"isolatedModules": true
	},
	"include": ["**/*", "**/**.*"],
	"exclude": ["**/dist/", "**/bin/"]
}
